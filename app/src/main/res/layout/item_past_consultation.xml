<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_past_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Robert Lee"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_past_doctor_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Practitioner"
                    android:textSize="14sp"
                    android:textColor="@color/grey_text"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/grey_text"
                        android:contentDescription="Calendar icon" />

                    <TextView
                        android:id="@+id/tv_past_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mar 25, 2025"
                        android:textSize="12sp"
                        android:textColor="@color/grey_text"
                        android:layout_marginStart="4dp" />

                    <ImageView
                        android:id="@+id/iv_past_type_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chat"
                        android:tint="@color/grey_text"
                        android:contentDescription="Chat icon"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tv_past_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In-person"
                        android:textSize="12sp"
                        android:textColor="@color/grey_text"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Summary"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/grey_stroke"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/ic_notes"
                    app:iconSize="20dp"
                    app:iconTint="@color/grey_text"
                    app:iconGravity="textStart"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minHeight="0dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_rate_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate Doctor"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/grey_stroke"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/ic_star"
                    app:iconSize="20dp"
                    app:iconTint="@color/yellow_star"
                    app:iconGravity="textStart"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minHeight="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>