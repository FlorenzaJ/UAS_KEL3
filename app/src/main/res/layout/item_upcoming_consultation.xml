<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_upcoming_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Sarah Johnson"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_upcoming_doctor_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulmonologist"
                    android:textSize="14sp"
                    android:textColor="@color/grey_text"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/grey_text"
                        android:contentDescription="Calendar icon" />

                    <TextView
                        android:id="@+id/tv_upcoming_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="12sp"
                        android:textColor="@color/grey_text"
                        android:layout_marginStart="4dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_time"
                        android:tint="@color/grey_text"
                        android:contentDescription="Time icon"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tv_upcoming_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:30 PM"
                        android:textSize="12sp"
                        android:textColor="@color/grey_text"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_upcoming_type_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_video_call"
                android:tint="@color/dark_cyan"
                android:contentDescription="Video call icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_upcoming_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Call"
                android:textSize="12sp"
                android:textColor="@color/dark_cyan"
                android:background="@drawable/status_badge_good"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join Now"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_cyan"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reschedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reschedule"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:strokeColor="@color/grey_stroke"
                app:strokeWidth="1dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>